{
  "ConnectionStrings": {
    "UserContextConnection": "Data Source=data/users.db",
    "ToodContextConnection": "Data Source=data/statuses.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "MinimumLevel": "Trace"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "Sample Logged API"
    }
  },
  "AllowedHosts": "*"
}